
<div class = 'container'>
	<div class = 'row' id='main'>
		<div class = 'col-sm-4' id='uneaten'>
			<h1 id='uneatenHeader'>Burgers</h1>
			<ul id = 'uneatenList'>
				{{#each burgers}}
					{{#unless devoured}}
					         <div class='burger-list-li'>
                <p class='burger-text'>{{burger_name}}</p>
                <button class='devour' data-id={{id}} data-name='{{burger_name}}'>Devour</button>
                <br>
              </div>
					{{/unless}}
				{{/each}}		
			</ul>
		</div>

		<div class = 'col-sm-4' id='inputArea'>
			<h1 id= 'textAreaHeader'>Please submit your burger!</h1>
			<textarea id="newBurger" class= 'textArea' placeholder="Enter Burger Here..." style = "width: 100%; height: 120px"></textarea>
			<button type="submit" id="submit" class='btn btn-submit'>Submit</button>
		</div>
		<div class= 'col-sm-4' id='eaten'>
			<h1>Burgers eaten!</h1>
			<ul id = 'eatenList'>
				{{#each burgers}}
					{{#if devoured}}
					 <p>{{burger_name}}</p>
					{{/if}}
				{{/each}}
			</ul>
		</div>
	</div>
</div>
